{
  "name": "frontend-clean-architecture",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": " A front-end template that considers itself excellent for building web applications with vue.",
  "engines": {
    "node": "^18.0.0 || >= 20.0.0"
  },
  "scripts": {
    "dev": "vite",
    "dev:mock": "run-p server dev",
    "server": "nitro dev --dir ./mock --port 8080",
    "build": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "coverage": "nitro build & vitest run --coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "@vueuse/core": "^10.7.2",
    "axios": "^1.6.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-vue-next": "^0.331.0",
    "mitt": "^3.0.1",
    "nprogress": "^0.2.0",
    "pinia": "^2.1.7",
    "radix-vue": "^1.4.6",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "unstorage": "^1.10.1",
    "vue": "^3.4.19",
    "vue-i18n": "^9.9.1",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.4",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@eslint/eslintrc": "^3.0.1",
    "@intlify/unplugin-vue-i18n": "^2.0.0",
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^20.11.19",
    "@types/nprogress": "^0.2.3",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vitest/coverage-v8": "^1.3.0",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "nano-staged": "^0.8.0",
    "nitropack": "^2.8.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "unplugin-auto-import": "^0.17.5",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.1.3",
    "vitest": "^1.3.0",
    "vue-tsc": "^1.8.27"
  },
  "nano-staged": {
    "*.{ts,tsx,vue}": "eslint --fix"
  }
}
