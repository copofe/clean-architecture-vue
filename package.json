{
  "name": "frontend-clean-architecture",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@8.15.1",
  "description": "A front-end template designed for building web applications with Vue.js",
  "author": "copofe <me@shinji.me>",
  "license": "MIT",
  "repository": "copofe/frontend-clean-architecture",
  "engines": {
    "node": "^18.0.0 || >= 20.0.0"
  },
  "scripts": {
    "dev": "vite",
    "dev:mock": "run-p server dev",
    "server": "nitro dev --dir ./mock --port 8080",
    "build": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@vueuse/core": "^10.9.0",
    "axios": "^1.6.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-vue-next": "^0.343.0",
    "mitt": "^3.0.1",
    "nprogress": "^0.2.0",
    "pinia": "^2.1.7",
    "radix-vue": "^1.4.9",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "unstorage": "^1.10.1",
    "vue": "^3.4.21",
    "vue-i18n": "^9.10.1",
    "vue-router": "^4.3.0",
    "vue-sonner": "^1.0.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.4",
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@eslint/eslintrc": "^3.0.2",
    "@intlify/unplugin-vue-i18n": "^2.0.0",
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^20.11.24",
    "@types/nprogress": "^0.2.3",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vitest/coverage-v8": "^1.3.1",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.57.0",
    "jsdom": "^24.0.0",
    "nano-staged": "^0.8.0",
    "nitropack": "^2.9.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.35",
    "simple-git-hooks": "^2.9.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "unplugin-auto-import": "^0.17.5",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.1.4",
    "vite-plugin-pwa": "^0.19.2",
    "vitest": "^1.3.1",
    "vue-tsc": "^1.8.27"
  },
  "nano-staged": {
    "*": "eslint --fix"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged",
    "commit-msg": "./node_modules/.bin/commitlint -e"
  }
}
