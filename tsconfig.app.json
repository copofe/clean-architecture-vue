{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "::/*": ["./src/*"]
    },
    "types": [
      "@intlify/unplugin-vue-i18n/messages"
    ]
  },
  "include": [
    "types/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ]
}
